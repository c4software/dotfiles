#
# BSPWM HOTKEYS
#

super + shift + q
	pkill -x panel; bspc quit

super + shift + c
	bspc window -c

## CYCLE LAYOUT
super + n
	bspc desktop -l next

##BALANCE WINDOWS - SAME AREA
super + b
	bspc desktop -B

##SET FLOATING OR FULLSCREEN
super + {s,f,t}
	bspc window -t {floating,fullscreen,tiled}

super + {grave,Tab}
	bspc {window,desktop} -f last

alt + {Left,Down,Up,Right}
	bspc node -z {right -20 0,bottom 0 20,top 0 -20,left 20 0}

alt + Tab
	bspc node -f next	

##ROTATE TREE
super + shift + r  
	bspc desktop -R 90

##CYCLE WINDOW FORWARD OR BACKWARD
super + {comma,period}
	bspc desktop -C {backward,forward}

##SWITCH BETWEEN DESKTOPS
super + {Left,Right}
	bspc desktop -f {prev,next}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# WM INDEPENDENT HOTKEYS
#

super + Return
	urxvt

super + c
	firefox

control + alt + l
	{sh $HOME/.config/bspwm/lock.sh}

super + shift + s
	xfce4-screenshooter

super + d
	dmenu_run

ctrl + {Up,Down}
  amixer sset Master playback 5%{+,-}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
