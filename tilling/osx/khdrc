# Enable kwm compatibility mode
khd kwm on

# set color of default mode
khd mode default color 0xFFD5C4A1

# Quit Kwm
cmd + alt + ctrl - q     :    kwmc quit

# Launch iTerm2
cmd - return             :    open -na /Applications/Utilities/Terminal.app

## Resize
ralt - up       		:   kwmc window -c expand 0.05 north
ralt - right        	:   kwmc window -c reduce 0.05 west
ralt - down         	:   kwmc window -c reduce 0.05 north
ralt - left         	:   kwmc window -c expand 0.05 west

## Swap position
ralt + shift - up   	:   kwmc window -s north
ralt + shift - right    :   kwmc window -s east
ralt + shift - down     :   kwmc window -s south
ralt + shift - left     :   kwmc window -s west

## Move window
ralt + lctrl - up   	:   kwmc window -m north
ralt + lctrl - right    :   kwmc window -m east
ralt + lctrl - down 	:   kwmc window -m south
ralt + lctrl - left 	:   kwmc window -m west

## toggle split mode
ralt - s : kwmc window -c split-mode toggle

## toggle fullscreen
ralt - f : kwmc window -z fullscreen

# Rotate
ralt - r  :  kwmc tree rotate 90

ralt - w : khd -w "c4sofware@gmail.com"