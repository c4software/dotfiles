# Enable kwm compatibility mode
khd kwm on

# Launch Terminal
cmd - return    :    open -na /Applications/iTerm.app

# Manage tmux as tilling manager
cmd + shift - return : open -na /Applications/ttc.app

## Resize
cmd + shift - up  	  :   kwmc window -c expand 0.05 north
cmd + shift - right 	:   kwmc window -c expand 0.05 focused
cmd + shift - down  	:   kwmc window -c reduce 0.05 north
cmd + shift - left  	:   kwmc window -c reduce 0.05 focused

## Swap position
cmd + lalt + shift - up     	:   kwmc window -s north
cmd + lalt + shift - right  	:   kwmc window -s east
cmd + lalt + shift - down   	:   kwmc window -s south
cmd + lalt + shift - left   	:   kwmc window -s west

## toggle split mode
cmd + shift - s 	: kwmc window -c split-mode toggle

## Toggle Float
cmd + shift - f 	: kwmc window -t focused

## Spaces
lalt - tab : kwmc space -fExperimental previous

## Mode
cmd + shift - v : kwmc space -t bsp
cmd + shift - d : kwmc space -t monocle
cmd + shift - l : kwmc window -z fullscreen

## Layout
cmd + shift - j : kwmc tree restore 75

## Rotate
cmd + shift - r : kwmc tree rotate 90

lalt - w : khd -w "c4sofware@gmail.com"
