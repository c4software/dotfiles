# Enable kwm compatibility mode
khd kwm on

# Quit Kwm
cmd + alt + ctrl - q     :    kwmc quit

# Launch Terminal
cmd - return    :    open -na /Applications/iTerm.app

## Resize
lalt + shift - up  	  :   kwmc window -c expand 0.05 north
lalt + shift - right 	:   kwmc window -c expand 0.05 focused
lalt + shift - down  	:   kwmc window -c reduce 0.05 north
lalt + shift - left  	:   kwmc window -c reduce 0.05 focused

## Swap position
cmd + lalt + shift - up     	:   kwmc window -s north
cmd + lalt + shift - right  	:   kwmc window -s east
cmd + lalt + shift - down   	:   kwmc window -s south
cmd + lalt + shift - left   	:   kwmc window -s west

## toggle split mode
lalt + shift - s 	: kwmc window -c split-mode toggle

## toggle fullscreen
lalt + shift - f : kwmc window -z fullscreen

## Spaces
lalt - tab : kwmc space -fExperimental previous

## Mode
lalt + shift - v : kwmc space -t bsp
lalt + shift - d : kwmc space -t monocle
lalt + shift - l : kwmc space -t float

## Rotate
lalt + shift - r :  kwmc tree rotate 90

lalt - w : khd -w "c4sofware@gmail.com"
